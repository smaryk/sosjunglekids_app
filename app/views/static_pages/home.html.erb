<% if signed_in? %>
  <div class="row">
    <h1>Welcome to SOSJungleKids, India </h1>
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/newspost_form' %>
      </section>
    </aside>

    <div class="span8">
      <h3>Newsposts</h3>
      <%= render 'shared/feed' %>
    </div>

  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to SOSJungleKids, India</h1>
    <p>Welcome</p>
    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

<% end %>
